{% extends 'Common/template.twig' %}

{% block page_name %}{{ pageName }}{% endblock %}
{% block page_description %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <a href="{{ path('app_product_add') }}" class="btn btn-success btn-sm pull-right">Dodaj nowy produkt</a>
                </div>

                <div class="box-body table-responsive">
                    <div class="row">
                        <div class="col-md-12">
                            {% for message in app.flashes('info') %}
                                <div class="alert alert-success alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    <h4><i class="icon fa fa-check"></i> Sukces!</h4>
                                    {{ message }}
                                </div>
                            {% endfor %}

                            <table class="table table-hover">
                                <tbody>
                                <tr>
                                    <th>ID</th>
                                    <th>Nazwa</th>
                                    <th>Jednostka</th>
                                    <th>PKWiU</th>
                                    <th>Rabat Kwotowy</th>
                                    <th>Rabat procentowy</th>
                                    <th>Cena</th>
                                    <th>Typ ceny</th>
                                    <th>Cena hurtowa</th>
                                    <th>Stawka VAT</th>
                                    <th>&nbsp;</th>
                                </tr>
                                {% for product in products %}
                                    <tr>
                                        <td>{{ product.id }}</td>
                                        <td>{{ product.name }}</td>
                                        <td>{{ product.unit }}</td>
                                        <td>{{ product.pkwiu|default('---') }}</td>
                                        <td>{{ product.amountDiscount|price_format }}</td>
                                        <td>{{ product.percentageDiscount|number_format(2) }}%</td>
                                        <td>{{ product.price|price_format }}</td>
                                        <td>{{ product.priceTypeText }}</td>
                                        <td>{{ product.wholesalePrice|price_format }}</td>
                                        <td>{{ product.vatRate|number_format(0) }}%</td>
                                        <td>
                                            <a href="{{ path('app_product_get', {productId: product.id}) }}" data-toggle="tooltip" title="Podgląd i edycja"><i class="fa fa-search"></i></a>
                                            <a href="{{ path('app_product_delete', {productId: product.id}) }}" data-toggle="tooltip" title="Usuń"><i class="fa fa-remove text-danger"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}