{%  set route = app.request.attributes.get('_route') %}
<ul class="sidebar-menu" data-widget="tree">
    {% for menuItem in menuItems %}
        <li class="{{ menuItem.class }} {% if  route == menuItem.path %} active {% endif %}">
            <a href="{{ menuItem.url }}">
                <i class="fa {{ menuItem.icon }}"></i> <span>{{ menuItem.name }}</span>

                {% if menuItem.subtree is not empty %}
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                {% endif %}
            </a>
            {% if menuItem.subtree is not empty %}
                <ul class="treeview-menu">
                    {% for subItem in menuItem.subtree %}
                        <li><a href="{{ subItem.url }}"><i class="fa {{ subItem.icon }}"></i> {{ subItem.name }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>