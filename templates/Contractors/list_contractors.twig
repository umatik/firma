{% extends 'Common/template.twig' %}

{% block page_name %}{{ pageName }}{% endblock %}
{% block page_description %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <div class="box">
                <div class="box-header">
                    <a href="{{ path('app_contractor_add') }}" class="btn btn-success btn-sm pull-right">Dodaj nowego kontrahenta</a>
                </div>

                <div class="box-body table-responsive">
                    <div class="row">
                        <div class="col-md-12">
                            {% for message in app.flashes('info') %}
                                <div class="alert alert-success alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    <h4><i class="icon fa fa-check"></i> Sukces!</h4>
                                    {{ message }}
                                </div>
                            {% endfor %}

                            <table class="table table-hover">
                                <tbody>
                                <tr>
                                    <th>ID</th>
                                    <th>Nazwa</th>
                                    <th>NIP</th>
                                    <th>REGON</th>
                                    <th>Adres</th>
                                    <th>Kod pocztowy</th>
                                    <th>Miasto</th>
                                    <th>Telefon</th>
                                    <th>Email</th>
                                    <th>Rabat</th>
                                    <th>&nbsp;</th>
                                </tr>
                                {% for contractor in contractors %}
                                    <tr>
                                        <td>{{ contractor.id }}</td>
                                        <td>{{ contractor.name }}<br><small>{{ contractor.address }}</small></td>
                                        <td>{{ contractor.nip }}</td>
                                        <td>{{ contractor.regon }}</td>
                                        <td>{{ contractor.address }}</td>
                                        <td>{{ contractor.postalCode }}</td>
                                        <td>{{ contractor.city }}</td>
                                        <td>{{ contractor.phoneNumber }}</td>
                                        <td>{{ contractor.email }}</td>
                                        <td>{{ contractor.discount|number_format(2) }}%</td>
                                        <td>
                                            <div class="pull-right">
                                                <a href="{{ path('app_contractor_get', {contractorId: contractor.id}) }}" data-toggle="tooltip" title="Podgląd i edycja" class="btn btn-success"><i class="fa fa-edit"></i></a>
                                                <a href="{{ path('app_contractor_delete', {contractorId: contractor.id}) }}" data-toggle="tooltip" title="Usuń" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}